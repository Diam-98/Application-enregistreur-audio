<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/audio_image_view"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/play_button_icon_png"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/audio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titre audio"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/audio_date"
        app:layout_constraintLeft_toRightOf="@id/audio_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

    </TextView>

    <TextView
        android:id="@+id/audio_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date de l'audio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/audio_image_view"
        app:layout_constraintTop_toBottomOf="@+id/audio_title"
        app:layout_constraintVertical_bias="0.5">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>